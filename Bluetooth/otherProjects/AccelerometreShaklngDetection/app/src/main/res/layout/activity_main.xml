<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/msgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:text="Shake to get a toast and to switch color" />

    <TextView
        android:id="@+id/XTextView"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msgView"
        android:textSize="25sp"
        android:text="X :" />
    <TextView
        android:id="@+id/YTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/XTextView"
        android:textSize="25sp"
        android:text="Y :" />
    <TextView
        android:id="@+id/ZTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/YTextView"
        android:textSize="25sp"
        android:text="Z :" />

    <View
        android:id="@+id/coloredView"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>